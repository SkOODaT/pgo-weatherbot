<div ng-view></div>
<div class="modal fade" tabindex="-1" role="dialog" id="loginModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="loginForm" ng-submit="login(creds)">
                <div class="modal-header">
                    <h3 class="modal-title">
                        <button class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
                        Log In
                    </h3>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Email Address</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" ng-model="creds.username" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Password</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" ng-model="creds.password" />
                            </div>
                        </div>
                        <div class="alert alert-danger" ng-show="error">
                            <button class="close" ng-click="error = false">&times;</button>
                            User not authenticated.
                        </div>
                    </div>
                </div>
                <div class="modal-footer" ng-hide="error">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i></button>
                    <button type="submit" class="btn btn-primary" ><i class="fa fa-check"></i></button>
                </div>
            </form>
            
        </div>
    </div>
</div>